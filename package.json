{
  "name": "marhup",
  "version": "0.1.9",
  "description": "Markdownからグリッドベースのレイアウトで PowerPoint (PPTX) を生成するCLIツール",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "marhup": "./dist/cli.js",
    "marhup-mcp": "./dist/mcp.js"
  },
  "scripts": {
    "build": "run-s lint build:tsc",
    "build:tsc": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "mcp": "node dist/mcp.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "example": "npm run build && node dist/cli.js examples/sample.md -o examples/output.pptx"
  },
  "keywords": [
    "markdown",
    "powerpoint",
    "pptx",
    "presentation",
    "slides",
    "grid-layout"
  ],
  "author": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/ukiuni/marhup.git"
  },
  "license": "MIT",
  "dependencies": {
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/chokidar": "^2.1.7",
    "@types/dompurify": "^3.2.0",
    "chokidar": "^5.0.0",
    "commander": "^12.1.0",
    "dompurify": "^3.3.1",
    "i18next": "^25.8.0",
    "i18next-fs-backend": "^2.6.1",
    "image-size": "^2.0.2",
    "jsdom": "^27.4.0",
    "marked": "^11.2.0",
    "pptxgenjs": "^4.0.1",
    "vm2": "^3.10.3",
    "winston": "^3.19.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "lodash-es": "^4.17.23"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
