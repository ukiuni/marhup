{
  "name": "md2ppt",
  "version": "0.1.0",
  "description": "Markdownからグリッドベースのレイアウトで PowerPoint (PPTX) を生成するCLIツール",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "md2ppt": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "example": "npm run build && node dist/cli.js examples/sample.md -o examples/output.pptx"
  },
  "keywords": [
    "markdown",
    "powerpoint",
    "pptx",
    "presentation",
    "slides",
    "grid-layout"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "image-size": "^2.0.2",
    "marked": "^11.2.0",
    "pptxgenjs": "^3.12.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
